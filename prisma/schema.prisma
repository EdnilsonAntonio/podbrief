generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// --------------------------------------------------
//  USER
// --------------------------------------------------
model User {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  email              String              @unique
  name               String?
  imageUrl           String?

  credits            Float               @default(0)

  audioFiles         AudioFile[]
  transcriptions     Transcription[]
  creditPurchases    CreditPurchase[]

  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

// --------------------------------------------------
//  AUDIO FILE
// --------------------------------------------------
model AudioFile {
  id                 String        @id @default(auto()) @map("_id") @db.ObjectId

  userId             String        @db.ObjectId
  user               User          @relation(fields: [userId], references: [id])

  url                String
  originalFilename   String?
  sizeBytes          Int?
  durationSeconds    Int?
  status             String        @default("pending") // pending | processing | completed | error

  // relação 1:1 com transcrição
  transcription      Transcription?

  createdAt          DateTime      @default(now())
}

// --------------------------------------------------
//  TRANSCRIPTION
// --------------------------------------------------
model Transcription {
  id                 String        @id @default(auto()) @map("_id") @db.ObjectId

  userId             String        @db.ObjectId
  user               User          @relation(fields: [userId], references: [id])

  audioFileId        String?       @unique @db.ObjectId   // UNIQUE porque é 1:1
  audioFile          AudioFile?    @relation(fields: [audioFileId], references: [id])

  text               String
  summary            Summary?

  costCredits        Float         @default(1)

  shareToken         String?       // Token único para compartilhamento público
  isPublic           Boolean       @default(false) // Se a transcrição está pública

  createdAt          DateTime      @default(now())
}

// --------------------------------------------------
//  SUMMARY
// --------------------------------------------------
model Summary {
  id                 String         @id @default(auto()) @map("_id") @db.ObjectId

  transcriptionId    String         @unique @db.ObjectId  // UNIQUE porque é 1:1
  transcription      Transcription  @relation(fields: [transcriptionId], references: [id])

  bulletPoints       String?
  keywords           String?
  sentiment          String?
  shortSummary       String?
  longSummary        String?
  language           String?

  createdAt          DateTime       @default(now())
}

// --------------------------------------------------
//  CREDIT PURCHASE
// --------------------------------------------------
model CreditPurchase {
  id                 String       @id @default(auto()) @map("_id") @db.ObjectId

  userId             String       @db.ObjectId
  user               User         @relation(fields: [userId], references: [id])

  stripePaymentId    String?      @unique
  amountCredits      Int
  amountPaid         Float
  status             String        // succeeded | pending | failed

  createdAt          DateTime     @default(now())
}